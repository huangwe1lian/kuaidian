<resin xmlns="http://caucho.com/ns/resin" xmlns:resin="http://caucho.com/ns/resin/core">
  <log name="" level="info" path="stdout:"/>
  <cluster id="">
    <server id="">
		 <http port="8090"/> 
	</server>
    <resin:import path="${resin.home}/conf/app-default.xml"/>
    <host id="" root-directory=".">
          		
	<database jndi-name="jdbc/kuaidian">
		<driver type="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
	    		<url>jdbc:mysql://localhost:3306/kuaidian?useUnicode=true&amp;characterEncoding=UTF8&amp;zeroDateTimeBehavior=convertToNull</url>
	    		<user>root</user>
	    		<password>root</password>
	  		</driver>
			<prepared-statement-cache-size>8</prepared-statement-cache-size>
			<max-connections>60</max-connections>
			<max-idle-time>30s</max-idle-time>
	</database>
    
	<env-entry>
		<description>application properties</description>
		<env-entry-name>props</env-entry-name>
		<env-entry-type>java.lang.String</env-entry-type>
		<env-entry-value>${resin.home}/conf/kuaidian.properties</env-entry-value>
	</env-entry>	  
    
	<web-app id="/" document-directory="D:\workspace3\kuaidian.git\trunk\src\main\webapp" lazy-init="false" />

    </host>
  </cluster>
</resin>